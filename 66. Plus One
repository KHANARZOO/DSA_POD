class Solution {
    public int[] plusOne(int[] digits) {
        int n = digits.length;
        int num = 0;
        int carry = 0;
        int rem = 0;
        int[] res = new int[n];
        int k = n - 1;
        for (int i = n - 1; i >= 0; i--) {
            if (i == n - 1)
                num = digits[i] + carry + 1;
            else {
                num = digits[i] + carry;
            }
            carry = num / 10;
            rem = num % 10;
            digits[i] = rem;
        }
        if (carry == 0)
            return digits;
        int[] ans = new int[n + 1];
        if (carry != 0) {
            ans[0] = carry;
            for (int i = 1; i < n; i++) {
                ans[i] = digits[1];
            }
        }
        return ans;
    }
}
